<h3>Company Profile</h3>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Email</th>
      <th>Description</th>
      <th>Company type</th>
      <th>Number of employees</th>
      <th>Website</th>
      <th>Location</th>
      <th>Reg code</th>
      <th>Verified</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @company_profiles.each do |company_profile| %>
      <tr>
        <td><%= company_profile.company_name %></td>
        <!-- <td><%# company_profile.email %></td> -->
        <td><%= company_profile.description %></td>
        <td><%= company_profile.company_type %></td>
        <td><%= company_profile.number_of_employees %></td>
        <td><%= company_profile.website %></td>
        <td><%= company_profile.location %></td>
        <td><%= company_profile.reg_code %></td>
        <td><%= company_profile.verified %></td>
        <td><%= company_profile.image %></td>
        <td><%= link_to 'Show', company_profile %></td>
        <td><%= link_to 'Edit', edit_company_profile_path(company_profile) %></td>
        <td><%= link_to 'Destroy', company_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

