    <%# f.text_field :email %>
  </div> -->
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :company_type %><br>
    <%= f.text_field :company_type %>
  </div>
  <div class="field">
    <%= f.label :number_of_employees %><br>
    <%= f.number_field :number_of_employees %>
  </div>
  <div class="field">
    <%= f.label :website %><br>
    <%= f.text_field :website %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :reg_code %><br>
    <%= f.text_field :reg_code %>
  </div>

  <% if admin? %>
    <div class="field">
      <%= f.label :verified %><br>
      <%= f.check_box :verified %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
