<p id="notice"><%= notice %></p>
<div style="overflow: auto">
  <div>
    <h3>Search Job Postings</h3>
    <%= form_tag search_job_postings_url, :method => 'get' do %>
    <div class="row">
      <div class="col-lg-2">
        <p>
          <%= search_field_tag :position_text, @position_text, placeholder: "Position eg. Sales" %>
        </p>
      </div>  
      <div class="col-lg-2">
        <p>
          <%= text_field_tag :description_text, @description_text, placeholder: "Description eg. Manage team" %>
        </p>
      </div> 
      <div class="col-lg-2">
        <p>
          <%= select_tag :paid_text, options_for_select(@pay, @paid_text), placeholder: "Pay" %>
        </p>
      </div> 
      <div class="col-lg-2">
        <p>
          <%= text_field_tag :requirements_text, @requirements_text, placeholder: "Requirements eg. Statistics" %>
        </p>
      </div>
        <p>
          <%= submit_tag 'Search' %>
          <%= submit_tag 'Save Search', :name => 'save_search'%>
        </p>
    <% end %>
    </div>
  </div>


  <div style="display:inline-block; width:75%;">
    <% if !@saved.empty? %>
        <h3>Saved Searches</h3>

        <table>
          <tr>
            <th>Position</th>
            <th>Description</th>
            <th>Pay</th>
            <th>Requirements</th>
            <th>Culture</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>

          <% @saved.each do |search| %>
              <tr>
                <td><%= search.position_text %></td>
                <td><%= search.description_text %></td>
                <td><%= search.paid_text %></td>
                <td><%= search.requirements_text %></td>
                <td><%= link_to "Visit", search_job_postings_url(:position_text => search.position_text,
                                                                  :description_text => search.description_text,
                                                                  :paid_text => search.paid_text,
                                                                  :requirements_text => search.requirements_text)%></td>
                <td><%= link_to "Edit", edit_saved_job_posting_url(search) %></td>
                <td><%= link_to 'Destroy', search, :method=>:delete, :confirm=>'Are you sure?' %></td>
              </tr>
          <% end %>
        </table>
    <% end %>
  </div>

</div><br />

