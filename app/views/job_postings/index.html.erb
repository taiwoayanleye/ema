<section>
  <div class="content">

    <% @job_postings.each do |job_posting| %>

    <div class="large-4 medium-4 small-12 columns">
      <div class = 'internship'>

        <!--r1 company name | company type _ top bar-->
        <div class="row">
          <div class = "post_top">
          <!-- company name -->
            <div class="large-8 medium-8 small-8 columns">
              <div class="company_name">
                <p><%= "#{job_posting.company_profile.company_name}" %></p>
              </div>
            </div>

            <!-- company_type and location -->
            <div class="large-4 medium-4 small-4 columns">
              <div class="company_type">
                <i class="fa fa-tags"></i><a><%= "#{job_posting.company_profile.company_type}" %></a>
                <i class="divider"><%= '|' %></i>
                <i class="fa fa-map-marker"></i><a><%= "#{job_posting.company_profile.location}" %></a>
              </div>
            </div>
          </div>
        </div>
        
        <!--r2 company image-->
        <div class = 'row'>
          <div class = "post_mid">
            <div class="large-12 small-12 columns">
              <div class="company_image">
                <%= image_tag CompanyProfile.find(job_posting.company_profile.id).image_url %>
              </div>
            </div>
          </div>
        </div>

        <div class ='page_down'>

          <div class = 'row'>
            <div class ='page_down_one'>
            <!--internship positions-->
              <div class="large-12 small-12 columns">
                <div class="internship_position">
                  <i class="fa fa-user"></i><a><%= job_posting.position %></a>
                </div>
              </div>
            </div>
          </div>

        
          
          
          <!--duration, paid/not, -->
          <div class = 'row'>
            <div class ='page_down_two'>
              <div class="large-12 small-12 columns">
                <div class="internship_bottom">
                  <a><%= "#{job_posting.company_profile.location}" %></a>
                  <a><%= "#{job_posting.company_profile.number_of_employees}" %></a>
                </div>
              </div>
            </div>
          </div>

        </div>

      </div>
    </div>

    <% end %>

    <div class="row">
      <div class="large-9 small-9 small-centered large-centered columns">
        <div class= "button radius large-12 small-12 medium-12">
          <p>MORE</p>
        </div>
      </div>
    </div>

  </div>
</section>

  



