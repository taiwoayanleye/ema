<% if (user_signed_in? && current_user.user_type == "company") %>
<%= link_to 'New Job Posting', new_job_posting_path, class: "btn btn-link" %>
<% end %>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Position</th>
    <th class="center">Action</th>
  </tr>
  <% @job_postings.each do |job_posting| %>
  <tr>
    <td><%= job_posting.position %></td>
    <td><%= job_posting.job_description %></td>
    <td>
      <!-- Single button -->
      <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
          Action <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to "View", job_posting, class: "btn btn-link" %></li>
          <li><%= link_to "Edit", edit_job_posting_path(job_posting), class: "btn btn-link" %></li>
          <li><%= link_to "Destroy", job_posting, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link" %></li>
        </ul>
      </div>
    </td>
  </tr>
  <%end%>
</table>

<br>

<% if user_signed_in? && current_user.user_type == "company" %>
  <%= link_to 'New job_posting', new_job_posting_path, class: "btn btn-link", data: { no_turbolink: true } %>
<% end %>

